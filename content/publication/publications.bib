@article{zhou_detection_2008,
	title = {Detection of {GAPC} and {AT2G36580} expression level in {Brassica} napus by fluorescence real-time quantitative {PCR}},
	volume = {30},
	abstract = {Gene expression profiles of GAPC and AT2G36580 related to the glycolysis metabolism pathway were detected by real-time quantitative PCR in a restorer J10(MsMsrfrf × MsMsRfrf) of dominant digenic male sterility of Brassica napus.The results showed that the mRNA can be detected in roots,stems,leaves,flowers and pods,with the highest expression level in roots and the lowest in flowers.GAPC was inhibited in meiosis and uninucleate stages of sterile buds,but was highly expressed in trinucleate stage.In fertile buds GAPC hold the highest expression level at tetrad stage(5.06 times of that at the meiosis stage).AT2G36580 expression was inhibited in all bud developmental stages of sterile plants whereas there were highly expressed in meiosis and uninucleate stages of fertile buds.Further analysis of GAPC and AT2G36580 in stamens and pistils showed that expression level in stamens of fertile buds were 9.11 and 4.47 fold higher than that of sterife bads respectively.There were a significantly lower expression in pistils of fertile buds and a similar expression in stamens of sterile buds,in comparison with that in pistils of sterile buds.These data suggested similar expression profiles of GAPC and AT2G36580 in J10 may play an important role in sterility control via glycolysis pathway.},
	number = {2},
	journal = {Chinese Journal of Oil Crop Sciences},
	author = {Zhou, Jin and Dong, Caihua and Liu, Xuequn and Qin, Rui and Shi, Lei and Liu, Shengyi},
