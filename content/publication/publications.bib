@article{deng_cytological_2010,
	title = {Cytological observation of male gametogenesis development of digenic dominant {Shaan}-{GMS} in {Brassica} napus},
	volume = {32},
	abstract = {DDGMS （digenic dominant genic male sterile） microsporogenesis was investigated using Shaan-GMS rapeseed （Brassica napus L.） by squashing and freezing the anther. In sterile plants,the anther was shriveled,dehydrated and small with short filaments. Cytological observation revealed a normal tetrad stage of anther. Pollen aborted at the uninucleate microspore stage when tetrads exine aborted after microspores released. Exines and cytoplasm of microspores as well as tapetum cells prematurely degenerated. Only debris left subsequently in the distorted and shrunk locules. The results suggested rapeseed Shaan-GMS to be a new type of DDGMS.},
