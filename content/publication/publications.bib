	keywords = {marker-trait associations, meta-QTL, multi-locus GWAS, potassium use efficiency, single-locus GWAS},
	pages = {70},
	file = {全文:/Users/boer/Zotero/storage/KRWWFXMM/Safdar 等。 - 2020 - Genome-Wide Association Study and QTL Meta-Analysi.pdf:application/pdf},
